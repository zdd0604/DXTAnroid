<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/title_blue_bg">

        <TextView
            android:id="@+id/title_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_20" />

        <View
            android:id="@+id/view_br"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/title_one"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#cfcdcd" />

        <TextView
            android:id="@+id/title_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_br"
            android:layout_margin="10dp"
            android:text="副标题"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/content_hj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title_two"
            android:layout_alignStart="@+id/title_two"
            android:layout_below="@id/title_two"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/size_10"
            android:text="内容"
            android:textColor="@color/grey" />

    </RelativeLayout>
</RelativeLayout>
