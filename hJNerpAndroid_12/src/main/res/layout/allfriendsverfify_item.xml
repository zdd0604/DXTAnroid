<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" >

        <ImageView
            android:id="@+id/pic"
            android:layout_width="@dimen/abc_square_image_size45"
            android:layout_height="@dimen/abc_square_image_size45"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="6dip"
            android:scaleType="fitCenter"
            android:src="@drawable/v5_0_1_profile_headphoto" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dip"
        android:layout_marginTop="8dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="6dip" >

            <TextView
                android:id="@+id/username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="李响"
                android:textColor="@color/name_text_color"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/msgcontent_text_color"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dip"
        android:layout_marginTop="8dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/add_btn"
            android:layout_width="80dp"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/login_btn_style"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/result_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/add_btn"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="等待验证"
            android:textColor="@color/name_text_color"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>