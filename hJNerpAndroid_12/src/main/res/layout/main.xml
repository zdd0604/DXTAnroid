<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_main_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="#d7d7d7" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:background="@color/activity_background"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@null">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null">

                    <com.hjnerp.widget.ChangeColorIconWithTextView
                        android:id="@+id/id_indicator_im"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        zhy:eapicon="@drawable/icon_tab_message_unchecked"
                        zhy:eapiconselect="@drawable/icon_tab_message_selected"
                        zhy:eaptext="@string/main_tab_im"
                        zhy:eaptext_size="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="top|center"
                    android:paddingLeft="20.0dip"
                    android:paddingTop="3.0dip">

                    <TextView
                        android:id="@+id/main_tab_im_unread"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:background="@drawable/list_remind_text"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="10.0dip"
                        android:visibility="invisible" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/id_frame_workflow"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@null">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null">

                    <com.hjnerp.widget.ChangeColorIconWithTextView
                        android:id="@+id/id_indicator_workflow"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        zhy:eapicon="@drawable/icon_tab_check_approve_unchecked"
                        zhy:eapiconselect="@drawable/icon_tab_check_approve_selected"
                        zhy:eaptext="@string/main_tab_workflow"
                        zhy:eaptext_size="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="top|center"
                    android:paddingLeft="20.0dip"
                    android:paddingTop="3.0dip">

                    <TextView
                        android:id="@+id/main_tab_work_unread"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:background="@drawable/list_remind_text"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="10.0dip"
                        android:visibility="invisible" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@null">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null">

                    <com.hjnerp.widget.ChangeColorIconWithTextView
                        android:id="@+id/id_indicator_business"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        app:eapicon="@drawable/icon_tab_work_unchecked"
                        app:eapiconselect="@drawable/icon_tab_work_selected"
                        zhy:eaptext="@string/main_tab_business"
                        zhy:eaptext_size="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="top|center"
                    android:paddingLeft="20.0dip"
                    android:paddingTop="3.0dip">

                    <TextView
                        android:id="@+id/main_tab_business_unread"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:background="@drawable/list_remind_text"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="10.0dip"
                        android:visibility="invisible" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@null">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null">

                    <com.hjnerp.widget.ChangeColorIconWithTextView
                        android:id="@+id/id_indicator_contact"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        zhy:eapicon="@drawable/icon_tab_contact_unchecked"
                        zhy:eapiconselect="@drawable/icon_tab_contact_unchecked"
                        zhy:eaptext="@string/main_tab_contact"
                        zhy:eaptext_size="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="top|center"
                    android:paddingLeft="20.0dip"
                    android:paddingTop="3.0dip">

                    <TextView
                        android:id="@+id/main_tab_contact_unread"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:background="@drawable/list_remind_text"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="10.0dip"
                        android:visibility="invisible" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@null">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null">

                    <com.hjnerp.widget.ChangeColorIconWithTextView
                        android:id="@+id/id_indicator_my"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        zhy:eapicon="@drawable/icon_tab_my_unchecked"
                        zhy:eapiconselect="@drawable/icon_tab_my_unchecked"
                        zhy:eaptext="@string/main_tab_my"
                        zhy:eaptext_size="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="top|center"
                    android:paddingLeft="20.0dip"
                    android:paddingTop="3.0dip">

                    <TextView
                        android:id="@+id/main_tab_my_unread"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:background="@drawable/list_remind_text"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="10.0dip"
                        android:visibility="invisible" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <fragment
        android:id="@+id/id_left_menu"
        android:name="com.hjnerp.fragment.MyFragment"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:tag="LEFT" />

</LinearLayout>