
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dip"
        android:background="#F7F7F7">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <com.hjnerp.widget.BubbleImageView
                android:id="@+id/main_emp_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:src="@drawable/icon2"
                app:bubble_angle="18dp"
                app:bubble_arrowHeight="0dp"
                app:bubble_arrowLocation="right"
                app:bubble_arrowOffset="0dp"
                app:bubble_arrowTop="0dp"
                app:bubble_arrowWidth="0dp" />

            <TextView
                android:id="@+id/main_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="和佳"
                android:textColor="@color/actionbar_bg_color"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/main_phone_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/main_child_item_bkg"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/user_btn_call" />

            <ImageView
                android:id="@+id/main_find_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/main_child_item_bkg"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/user_btn_add" />

            <ImageView
                android:id="@+id/main_group_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/main_child_item_bkg"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/user_btn_message" />

            <ImageView
                android:id="@+id/main_refresh_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/main_child_item_bkg"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/user_btn_refreash" />

            <ImageView
                android:id="@+id/main_search_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/main_child_item_bkg"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/user_btn_searsh" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="#d7d7d7" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:background="@color/activity_background"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@null">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null">

                    <com.hjnerp.widget.ChangeColorIconWithTextView
                        android:id="@+id/id_indicator_im"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        zhy:eapicon="@drawable/icon_tab_message_unchecked"
                        zhy:eapiconselect="@drawable/icon_tab_message_selected"
                        zhy:eaptext="@string/main_tab_im"
                        zhy:eaptext_size="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="top|center"
                    android:paddingLeft="20.0dip"
                    android:paddingTop="3.0dip">

                    <TextView
                        android:id="@+id/main_tab_im_unread"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:background="@drawable/list_remind_text"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="10.0dip"
                        android:visibility="invisible" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/id_frame_workflow"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@null">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null">

                    <com.hjnerp.widget.ChangeColorIconWithTextView
                        android:id="@+id/id_indicator_workflow"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        zhy:eapicon="@drawable/icon_tab_check_approve_unchecked"
                        zhy:eapiconselect="@drawable/icon_tab_check_approve_selected"
                        zhy:eaptext="@string/main_tab_workflow"
                        zhy:eaptext_size="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="top|center"
                    android:paddingLeft="20.0dip"
                    android:paddingTop="3.0dip">

                    <TextView
                        android:id="@+id/main_tab_work_unread"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:background="@drawable/list_remind_text"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="10.0dip"
                        android:visibility="invisible" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@null">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null">

                    <com.hjnerp.widget.ChangeColorIconWithTextView
                        android:id="@+id/id_indicator_business"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        app:eapicon="@drawable/icon_tab_work_unchecked"
                        app:eapiconselect="@drawable/icon_tab_work_selected"
                        zhy:eaptext="@string/main_tab_business"
                        zhy:eaptext_size="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="top|center"
                    android:paddingLeft="20.0dip"
                    android:paddingTop="3.0dip">

                    <TextView
                        android:id="@+id/main_tab_business_unread"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:background="@drawable/list_remind_text"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="10.0dip"
                        android:visibility="invisible" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@null">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null">

                    <com.hjnerp.widget.ChangeColorIconWithTextView
                        android:id="@+id/id_indicator_contact"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        zhy:eapicon="@drawable/icon_tab_contact_unchecked"
                        zhy:eapiconselect="@drawable/icon_tab_contact_unchecked"
                        zhy:eaptext="@string/main_tab_contact"
                        zhy:eaptext_size="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="top|center"
                    android:paddingLeft="20.0dip"
                    android:paddingTop="3.0dip">

                    <TextView
                        android:id="@+id/main_tab_contact_unread"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:background="@drawable/list_remind_text"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="10.0dip"
                        android:visibility="invisible" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@null">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null">

                    <com.hjnerp.widget.ChangeColorIconWithTextView
                        android:id="@+id/id_indicator_my"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        zhy:eapicon="@drawable/icon_tab_my_unchecked"
                        zhy:eapiconselect="@drawable/icon_tab_my_unchecked"
                        zhy:eaptext="@string/main_tab_my"
                        zhy:eaptext_size="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="top|center"
                    android:paddingLeft="20.0dip"
                    android:paddingTop="3.0dip">

                    <TextView
                        android:id="@+id/main_tab_my_unread"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:background="@drawable/list_remind_text"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="10.0dip"
                        android:visibility="invisible" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <fragment
        android:id="@+id/id_left_menu"
        android:name="com.hjnerp.fragment.MyFragment"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:tag="LEFT" />

</LinearLayout>