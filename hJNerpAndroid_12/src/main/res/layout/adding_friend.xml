<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

   <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/user_head_avatar"
            android:layout_width="@dimen/abc_square_image_size60"
            android:layout_height="@dimen/abc_square_image_size60"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dip"
            android:scaleType="centerCrop"
            android:src="@drawable/v5_0_1_profile_headphoto" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@+id/user_head_avatar"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/user_head_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="#FF333333"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/user_head_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:src="@drawable/v5_0_1_icon_profile_star" />
            </LinearLayout>

            <TextView
                android:id="@+id/user_head_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="8dip"
                android:text="id"
                android:textColor="#ff888888"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/white" />
    
      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/orgunit"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginTop="5.0dip"
            android:layout_toRightOf="@+id/orgunittext"
            android:enabled="false"
            android:gravity="left"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingBottom="6.0dip"
            android:paddingLeft="50.0dip"
            android:paddingRight="0dp"
            android:paddingTop="6.0dip"
            android:textColor="#ff333333"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/orgunittext"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:gravity="left"
            android:paddingLeft="10.0dip"
            android:paddingRight="0dp"
            android:text="部门"
            android:textColor="#ff333333"
            android:textSize="14.0sp" />
    </RelativeLayout>



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/reader_item_divider" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/remarktext"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:gravity="left"
            android:paddingLeft="10.0dip"
            android:paddingRight="0dp"
            android:text="备注"
            android:textColor="#ff333333"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/remark"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginTop="5.0dip"
            android:layout_toRightOf="@id/remarktext"
            android:gravity="left"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingBottom="6.0dip"
            android:paddingLeft="50.0dip"
            android:paddingRight="0dp"
            android:paddingTop="6.0dip"
            android:textColor="#ff333333"
            android:textSize="14.0sp" />
    </RelativeLayout>
    
	<TextView
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/reader_item_divider" />
	
    <Button
        android:id="@+id/ui_addfriend_btn"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/button"
        android:text="添加到通讯录"
        android:textColor="@color/white"
        android:textSize="20sp" />
    

</LinearLayout>