<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/actionbar_content_rl_dept"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height"
        android:background="#f7f7f7"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/actionbar_back_rl_dept"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:background="@drawable/activity_child_item_bkg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/actionbar_back_iv_dept"
                android:layout_width="@dimen/abc_dropdownitem_icon_width"
                android:layout_height="@dimen/abc_dropdownitem_icon_width"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:focusable="false"
                android:gravity="center"
                android:paddingBottom="@dimen/abc_action_bar_icon_vertical_padding"
                android:paddingLeft="@dimen/abc_action_bar_icon_vertical_padding"
                android:paddingRight="@dimen/abc_action_bar_icon_vertical_padding"
                android:paddingTop="@dimen/abc_action_bar_icon_vertical_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/actionbar_home_indicator_blue" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/actionbar_back_rl_dept"
            android:text="发起群聊 "
            android:textColor="@color/actionbar_bkg_black"
            android:textSize="@dimen/abc_action_bar_title_text_size" />


        <Button
            android:id="@+id/actionbar_countmember_iv_dept"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="10dip"
            android:layout_marginTop="6dp"
            android:background="@drawable/login_btn_style"
            android:enabled="false"
            android:gravity="center"
            android:text="确定"
            android:textSize="15sp" />
    </RelativeLayout>

    <ExpandableListView
        android:id="@+id/expand_list_selectgroupmember_dept"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="5"
        android:childDivider="@drawable/reader_item_divider"
        android:divider="@drawable/reader_item_divider"
        android:dividerHeight="1px"
        android:fadingEdge="none" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#f0e3e3e3" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dp">

        <com.hjnerp.widget.HorizontalListView
            android:id="@+id/horizontallistview1_dept"
            android:layout_width="fill_parent"
            android:layout_height="70dp" />
    </RelativeLayout>

</LinearLayout>