<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_activity_bkg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/account_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <com.hjnerp.widget.ClearEditText
            android:id="@+id/input_et"
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:layout_weight="4"
            android:background="@drawable/input_bar_bg_active"
            android:drawableLeft="@drawable/a6w"
            android:hint=""
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:textColor="#ffc8c9c7"
            android:textSize="18sp"
            />

        <!--
           <Button
	            android:id="@+id/search_btn"
	            android:layout_width="70dp"
	            android:layout_height="35dp"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="5dp"
	            android:background="@drawable/login_btn_style"
	            android:enabled="false"
	            android:text="@string/search"
	            android:textColor="@color/white"
	            android:textSize="18sp" 
            />
        -->
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:orientation="vertical" >
        
        <RelativeLayout
            android:id="@+id/rl_saoyisao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/l_selector"
            android:padding="10dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/saoyisao_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/a6s" 
                />

            <TextView
                android:id="@+id/saoyisao_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/saoyisao_iv"
                android:text="扫一扫"
                android:textColor="@color/dimgray"
                android:textSize="16sp" 
                />
            
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/saoyisao_iv"
                android:layout_below="@id/saoyisao_tv"
                android:text="扫描二维码名片"
                android:textColor="@color/hjgridheader"
                android:textSize="12sp" 
                />
            
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/l_divider" />

        <RelativeLayout
            android:id="@+id/rl_lianxiren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/l_selector"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/lianxiren_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/a6l" 
                />

            <TextView
                android:id="@+id/lianxiren_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/lianxiren_iv"
                android:text="手机联系人"
                android:textColor="@color/dimgray"
                android:textSize="16sp" 
                />
            
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/lianxiren_iv"
                android:layout_below="@id/lianxiren_tv"
                android:text="添加或邀请通讯录中的朋友"
                android:textColor="@color/hjgridheader"
                android:textSize="12sp" 
                />
            
        </RelativeLayout>
        
    </LinearLayout>

</LinearLayout>