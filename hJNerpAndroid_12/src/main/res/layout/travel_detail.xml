<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/travel_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_30">

        <TextView
            android:id="@+id/travel_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_10"
            android:text="行程明细1" />

        <TextView
            android:id="@+id/travel_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_10"
            android:text="删除"
            android:textColor="#27a4e3" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="起点"
                android:textColor="#000000"
                android:textSize="@dimen/font_size_16" />

            <EditText
                android:id="@+id/travel_from"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_10"
                android:textSize="@dimen/font_size_15" />
        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#99efeff4" />

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:text="时  间"-->
        <!--android:textColor="#000000"-->
        <!--android:textSize="16sp" />-->

        <EditText
            android:id="@+id/travel_time_from"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="false"
            android:gravity="center"
            android:hint="请选择启程的时间"
            android:textColorHint="#aaaaaa"
            android:textSize="@dimen/font_size_15" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99efeff4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="终点"
                android:textColor="#000000"
                android:textSize="@dimen/font_size_16" />

            <EditText
                android:id="@+id/travel_to"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_10"
                android:textSize="@dimen/font_size_15" />
        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#99efeff4" />

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:text="时  间"-->
        <!--android:textColor="#000000"-->
        <!--android:textSize="16sp" />-->

        <EditText
            android:id="@+id/travel_time_to"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="false"
            android:gravity="center"
            android:hint="请选择到达的时间"
            android:textColorHint="#aaaaaa"
            android:textSize="@dimen/font_size_15" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99efeff4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="费用项目"
            android:textColor="#000000"
            android:textSize="@dimen/font_size_16" />

        <Spinner
            android:id="@+id/travel_pay_work"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:minHeight="@dimen/size_44"
            android:textSize="@dimen/font_size_15" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#99efeff4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="费用金额"
            android:textColor="#000000"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/travel_pay_fee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789."
            android:gravity="center_vertical"
            android:inputType="number"
            android:minHeight="@dimen/size_44"
            android:paddingLeft="@dimen/size_10"
            android:textSize="@dimen/font_size_15" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99efeff4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="备注"
            android:textColor="#000000"
            android:textSize="@dimen/font_size_16" />

        <EditText
            android:id="@+id/travel_others"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:minHeight="@dimen/size_44"
            android:paddingLeft="@dimen/size_10"
            android:textSize="@dimen/font_size_15" />
    </LinearLayout>
</LinearLayout>