<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bkg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/contactlist_search_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <EditText
            android:id="@+id/contactlist_search_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="7dip"
            android:layout_marginRight="7dip"
            android:drawablePadding="5dip"
            android:hint="璇疯緭鍏ュ叧閿瓧"
            android:paddingLeft="10dip"
            android:singleLine="true"
            android:textColor="#000000"
            android:textCursorDrawable="@null"
            android:textSize="15.0dip" />
    </LinearLayout>

    <ListView
        android:id="@+id/phonecontactList_lv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/contactlist_search_ll"
        android:layout_gravity="center"
        android:divider="@drawable/reader_item_divider"
        android:dividerHeight="1px"
        android:focusable="true"
        android:footerDividersEnabled="true" >
    </ListView>

</LinearLayout>