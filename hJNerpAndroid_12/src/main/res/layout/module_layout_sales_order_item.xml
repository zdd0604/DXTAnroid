<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bs_sales_order_item_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_1">

    <LinearLayout
        style="@style/Item_LinearLayout_VerticalDefaultStyle"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bs_sales_order_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_20"
                tools:text="川贝母粉" />

            <TextView
                android:id="@+id/bs_sales_order_item_delete"
                style="@style/Item_RLayoutTv_RightTitle"
                android:layout_alignParentRight="true"
                android:text="@string/pfItem_Title_perfDelete"
                android:visibility="gone" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:orientation="horizontal">

            <TextView
                style="@style/Item_LinearLayout_TVLeftTieleStyle2"
                android:layout_width="wrap_content"
                android:text="@string/bs_SalesOrderAddl_Item_Title1" />

            <TextView
                android:id="@+id/bs_sales_order_item_id_uom"
                style="@style/Item_LinearLayout_TvRightTitleStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:orientation="horizontal">

            <TextView
                style="@style/Item_LinearLayout_TVLeftTieleStyle2"
                android:layout_width="wrap_content"
                android:text="@string/bs_SalesOrderAddl_Item_Title2" />

            <TextView
                android:id="@+id/bs_sales_order_item_id_item"
                style="@style/Item_LinearLayout_TvRightTitleStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:orientation="horizontal">

            <TextView
                style="@style/Item_LinearLayout_TVLeftTieleStyle2"
                android:layout_width="wrap_content"
                android:text="@string/bs_SalesOrderAddl_Item_Title3" />

            <TextView
                android:id="@+id/bs_sales_order_item_id_prodarea"
                style="@style/Item_LinearLayout_TvRightTitleStyle" />

        </LinearLayout>


        <LinearLayout
            style="@style/Item_LinearLayout_HorizontalStyle"
            android:layout_height="@dimen/size_30">

            <TextView
                style="@style/Item_LinearLayout_TVLeftTieleStyle2"
                android:layout_width="wrap_content"
                android:text="@string/bs_SalesOrderAddl_Item_Title4" />

            <com.dxtnerp.widget.ClearEditText
                android:id="@+id/bs_sales_order_item_dec_qty"
                style="@style/Item_LinearLayout_EdRightTitleStyle"
                android:hint="@string/bs_AddTerminal_Hint1"
                android:inputType="number" />
        </LinearLayout>

        <View
            style="@style/Item_View_DividerHeight3"
            android:layout_alignParentBottom="true" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/bs_sales_order_item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/size_10"
        android:clickable="false" />
</RelativeLayout>
