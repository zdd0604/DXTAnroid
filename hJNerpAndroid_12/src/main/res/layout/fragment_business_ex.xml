<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_12">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_bfragment_banner" />

            <LinearLayout
                android:id="@+id/visit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/size_5"
                    android:paddingLeft="@dimen/size_24"
                    android:paddingTop="@dimen/size_14"
                    android:textColor="@color/viewgroup_texrcolor"
                    android:text="@string/bFragment_Title_ViewGroup1"
                    android:textSize="15sp" />

                <com.hjnerp.fragment.MyGridView
                    android:id="@+id/gridview_businessmenu_ex1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/viewgroup_item"
                    android:gravity="center"
                    android:horizontalSpacing="1dp"
                    android:numColumns="4"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="1dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/other_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/size_5"
                    android:paddingLeft="@dimen/size_24"
                    android:paddingTop="@dimen/size_14"
                    android:textColor="@color/viewgroup_texrcolor"
                    android:text="@string/bFragment_Title_ViewGroup2"
                    android:textSize="15sp" />

                <com.hjnerp.fragment.MyGridView
                    android:id="@+id/gridview_businessmenu_ex2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/viewgroup_item"
                    android:gravity="center"
                    android:horizontalSpacing="1dp"
                    android:numColumns="4"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="1dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/find_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/size_5"
                    android:paddingLeft="@dimen/size_24"
                    android:paddingTop="@dimen/size_14"
                    android:textColor="@color/viewgroup_texrcolor"
                    android:text="@string/bFragment_Title_ViewGroup3"
                    android:textSize="15sp" />

                <com.hjnerp.fragment.MyGridView
                    android:id="@+id/gridview_businessmenu_ex3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/viewgroup_item"
                    android:gravity="center"
                    android:horizontalSpacing="1dp"
                    android:numColumns="4"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="1dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/performance_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/size_5"
                    android:paddingLeft="@dimen/size_24"
                    android:paddingTop="@dimen/size_14"
                    android:textColor="@color/viewgroup_texrcolor"
                    android:text="@string/bFragment_Title_ViewGroup4"
                    android:textSize="15sp" />

                <com.hjnerp.fragment.MyGridView
                    android:id="@+id/gridview_businessmenu_ex4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/viewgroup_item"
                    android:gravity="center"
                    android:horizontalSpacing="1dp"
                    android:numColumns="4"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="1dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bus_error"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/dialog_warning" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="业务菜单加载失败"
                    android:textColor="@color/red"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="请点击右上角按钮刷新"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="或联系管理员授权"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>