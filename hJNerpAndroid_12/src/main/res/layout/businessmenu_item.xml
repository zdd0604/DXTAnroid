<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/business_child_item_bkg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:id="@+id/space_location"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/abc_square_image_size38"
                android:layout_height="@dimen/abc_square_image_size38"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="#00000000"
                android:src="@drawable/recommend_from_qrcode" />

            <TextView
                android:id="@+id/tv_menutitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/image"
                android:text="类型1"
                android:textColor="#302b2b"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_paopao_businessmenuitem"
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/tab_newmsg_text"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10dip" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/business_bkg_grey" />

</LinearLayout>